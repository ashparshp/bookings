    }
    
    .about-header {
        background: linear-gradient(135deg, #3a7bd5 0%, #1e50a2 100%);
        color: white;
        padding: 2rem;
        text-align: center;
    }
    
    .about-header h1 {
        margin: 0;
        font-weight: 600;
        font-size: 2.5rem;
    }
    
    .feature-box {
        text-align: center;
        padding: 2rem 1rem;
        height: 100%;
        transition: all 0.3s ease;
        border-radius: 10px;
    }
    
    .feature-box:hover {
