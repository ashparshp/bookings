{{template "base" .}}

{{define "content"}}
    <!-- Hero Carousel -->
    <div id="main-carousel" class="carousel slide carousel-fade" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#main-carousel" data-slide-to="0" class="active"></li>
            <li data-target="#main-carousel" data-slide-to="1"></li>
            <li data-target="#main-carousel" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/static/images/woman-laptop.png" class="d-block w-100 hero-image" alt="Woman and laptop">
                <div class="carousel-caption">
                    <div class="hero-content">
                        <h1 class="hero-title">Luxury Accommodations</h1>
                        <p class="hero-description">Experience comfort and elegance in our premium rooms</p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/static/images/tray.png" class="d-block w-100 hero-image" alt="Tray with coffee">
                <div class="carousel-caption">
                    <div class="hero-content">
                        <h1 class="hero-title">Exceptional Service</h1>
                        <p class="hero-description">Enjoy personalized hospitality and premium amenities</p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/static/images/outside.png" class="d-block w-100 hero-image" alt="Outside">
                <div class="carousel-caption">
                    <div class="hero-content">
                        <h1 class="hero-title">Breathtaking Views</h1>
                        <p class="hero-description">Wake up to stunning ocean vistas every morning</p>
                    </div>
                </div>
            </div>
        </div>
        
        <a class="carousel-control-prev" href="#main-carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#main-carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- Main Content -->
    <div class="container mt-5">
        <!-- Welcome Section -->
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="welcome-section text-center mb-5">
                    <h1 class="display-4 text-primary mb-4">Welcome to Fort Smythe Bed & Breakfast</h1>
                    <div class="welcome-divider mb-4"></div>
                    <p class="lead text-muted mb-4">
                        Your home away from home, set on the majestic waters of the Atlantic Ocean. 
                        Experience luxury, comfort, and unforgettable memories in our boutique bed and breakfast.
                    </p>
                    <p class="text-muted">
                        Nestled along the pristine coastline, our establishment offers an intimate escape with 
                        breathtaking ocean views, personalized service, and elegantly appointed accommodations. 
                        Whether you're seeking a romantic getaway or a peaceful retreat, Fort Smythe promises 
                        an extraordinary experience that will create lasting memories.
                    </p>
                </div>
            </div>
        </div>

        <!-- Features Section -->
        <div class="row mb-5">
            <div class="col-md-4 mb-4">
                <div class="feature-card text-center">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-bed"></i>
                    </div>
                    <h4 class="feature-title">Luxury Rooms</h4>
                    <p class="feature-description">Elegantly furnished rooms with ocean views and premium amenities</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card text-center">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-utensils"></i>
                    </div>
                    <h4 class="feature-title">Gourmet Breakfast</h4>
                    <p class="feature-description">Start your day with locally sourced, freshly prepared meals</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card text-center">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-water"></i>
                    </div>
                    <h4 class="feature-title">Oceanfront Location</h4>
                    <p class="feature-description">Direct access to pristine beaches and stunning coastal walks</p>
                </div>
            </div>
        </div>

        <!-- CTA Section -->
        <div class="row">
            <div class="col-12">
                <div class="cta-section text-center">
                    <h3 class="cta-title mb-3">Ready for Your Perfect Getaway?</h3>
                    <p class="cta-description mb-4">Book your stay today and experience the ultimate in coastal luxury</p>
                    <a href="/search-availability" class="btn btn-primary btn-lg cta-button">
                        <i class="fas fa-calendar-check me-2"></i>Make Reservation Now
                    </a>
                </div>
            </div>
        </div>
    </div>

    <style>
        /* Hero Section */
        .hero-image {
            height: 70vh;
            object-fit: cover;
            filter: brightness(0.7);
        }

        .carousel-caption {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            width: 100%;
        }

        .hero-content {
            background: rgba(0, 0, 0, 0.4);
            padding: 40px;
            border-radius: 15px;
            backdrop-filter: blur(10px);
            margin: 0 auto;
            max-width: 600px;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 300;
            color: white;
            margin-bottom: 20px;
            letter-spacing: -1px;
        }

        .hero-description {
            font-size: 1.3rem;
            color: rgba(255, 255, 255, 0.9);
            margin-bottom: 0;
        }

        /* Welcome Section */
        .welcome-section {
            padding: 60px 0;
        }

        .welcome-divider {
            width: 60px;
            height: 3px;
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
            margin: 0 auto;
            border-radius: 2px;
        }

        .display-4 {
            font-weight: 300;
            letter-spacing: -1px;
        }

        /* Features Section */
        .feature-card {
            padding: 40px 20px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            height: 100%;
        }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 123, 255, 0.15);
        }

        .feature-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            color: white;
            font-size: 2rem;
        }

        .feature-title {
            color: #333;
            font-weight: 600;
            margin-bottom: 15px;
        }

        .feature-description {
            color: #6c757d;
            line-height: 1.6;
        }

        /* CTA Section */
        .cta-section {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            padding: 60px 40px;
            border-radius: 20px;
            margin: 60px 0;
        }

        .cta-title {
            color: #333;
            font-weight: 600;
        }

        .cta-description {
            color: #6c757d;
            font-size: 1.1rem;
        }

        .cta-button {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
            border: none;
            border-radius: 25px;
            padding: 15px 40px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }

        .cta-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(0, 123, 255, 0.3);
            background: linear-gradient(135deg, #0056b3 0%, #004085 100%);
        }

        /* Carousel Controls */
        .carousel-control-prev,
        .carousel-control-next {
            width: 5%;
        }

        .carousel-indicators {
            bottom: 30px;
        }

        .carousel-indicators li {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            margin: 0 5px;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .hero-image {
                height: 50vh;
            }

            .hero-title {
                font-size: 2.5rem;
            }

            .hero-description {
                font-size: 1.1rem;
            }

            .hero-content {
                padding: 30px 20px;
            }

            .display-4 {
                font-size: 2.5rem;
            }

            .welcome-section {
                padding: 40px 0;
            }

            .feature-card {
                padding: 30px 15px;
            }

            .cta-section {
                padding: 40px 20px;
                margin: 40px 0;
            }
        }

        @media (max-width: 576px) {
            .hero-title {
                font-size: 2rem;
            }

            .hero-description {
                font-size: 1rem;
            }

            .display-4 {
                font-size: 2rem;
            }
        }
    </style>
{{end}}