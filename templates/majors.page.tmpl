.suite-card {
    background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
}

.title-underline-gold {
    width: 120px;
    height: 4px;
    background: linear-gradient(90deg, #ffc107, #ff9800);
    border-radius: 2px;
}

.premium-feature-card {
    background: linear-gradient(135deg, #fff 0%, #fff8e1 100%);
    border-radius: 20px;
    transition: all 0.4s ease;
    border: 2px solid #fff3cd;
    position: relative;
    overflow: hidden;
}

.premium-feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #ffc107, #ff9800);
    transform: scaleX(0);
    transition: transform 0.4s ease;
}

.premium-feature-card:hover::before {
    transform: scaleX(1);
}

.premium-feature-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(255,193,7,0.2);
    border-color: #ffc107;
}

.feature-icon {
    transition: all 0.4s ease;
}

.premium-feature-card:hover .feature-icon {
    transform: scale(1.2) rotate(5deg);
}

.premium-amenities {
    background: linear-gradient(135deg, #fff 0%, #fff8e1 100%);
}

.premium-amenities-list li {
    padding: 12px 0;
    border-bottom: 1px solid #fff3cd;
    font-weight: 500;
}

.premium-amenities-list li:last-child {
    border-bottom: none;
}

.special-perks {
    background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
}

.perk-item {
    padding: 15px;
    border-radius: 10px;
    transition: all 0.3s ease;
}

.perk-item:hover {
    background: rgba(255,193,7,0.1);
    transform: translateX(5px);
}

.premium-cta-section {
    background: linear-gradient(135deg, #fff3cd 0%, #fff8e1 100%);
    border: 3px dashed #ffc107;
    transition: all 0.4s ease;
    position: relative;
    overflow: hidden;
}

.premium-cta-section::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent, rgba(255,193,7,0.1), transparent);
    transform: rotate(45deg);
    transition: all 0.6s ease;
    opacity: 0;
}

.premium-cta-section:hover::before {
    animation: shimmer 2s infinite;
    opacity: 1;
}

@keyframes shimmer {
    0% { transform: translateX(-100%) rotate(45deg); }
    100% { transform: translateX(100%) rotate(45deg); }
}

.premium-cta-section:hover {
    border-color: #ff9800;
    background: linear-gradient(135deg, #fff 0%, #fff3cd 100%);
    transform: scale(1.02);
}

@media (max-width: 768px) {
    .room-hero {
        height: 60vh;
        min-height: 450px;
    }
    
    .hero-content h1 {
        font-size: 2.5rem;
    }
    
    .premium-feature-card, .perk-item {
        margin-bottom: 20px;
    }
}
</style>

