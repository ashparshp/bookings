{{template "base" .}}

{{define "content"}}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h2 class="my-2"><i class="fas fa-calendar-alt me-2"></i>Search for Availability</h2>
                    </div>
                    <div class="card-body p-4">
                        <form action="/search-availability" method="post" novalidate class="needs-validation">
                            <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                            
                            <div class="mb-4">
                                <label for="reservation-dates" class="form-label fw-bold">Select your dates</label>
                                <div class="row" id="reservation-dates">
                                    <div class="col-md-6 mb-3 mb-md-0">
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-calendar-check"></i></span>
                                            <input required class="form-control" type="text" name="start" placeholder="Arrival date" autocomplete="off">
                                        </div>
                                        <div class="invalid-feedback">Please select an arrival date</div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-calendar-minus"></i></span>
                                            <input required class="form-control" type="text" name="end" placeholder="Departure date" autocomplete="off">
                                        </div>
                                        <div class="invalid-feedback">Please select a departure date</div>
                                    </div>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg" id="search-button">
                                    <i class="fas fa-search me-1"></i> Check Availability
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-muted text-center">
                        <small>Find your perfect stay with our real-time availability search</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{end}}

{{define "js"}}
<script>
    // Date range picker initialization
    const elem = document.getElementById('reservation-dates');
    const rangePicker = new DateRangePicker(elem, {
        format: "yyyy-mm-dd",
        minDate: new Date(),
    });
    
    // Form validation
    (function() {
        'use strict';
        const form = document.querySelector('.needs-validation');
        form.addEventListener('submit', function(event) {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            } else {
                const button = document.getElementById('search-button');
                button.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span> Searching...';
                button.disabled = true;
            }
            form.classList.add('was-validated');
        }, false);
    })();
</script>
{{end}}
